<?xml version="1.0"?>
<robot name="berry_gripper" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- A dummy link (required even if you don't care about visuals) -->
  <link name="base_link"/>

  <!-- Gripper joint -->
  <joint name="gripper_joint" type="revolute">
    <parent link="base_link"/>
    <child link="gripper_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="1.57" effort="1.0" velocity="1.0"/>
  </joint>

  <link name="gripper_link"/>

  <!-- ros2_control hardware interface -->
  <ros2_control name="BerryGripperSystem" type="system">
    <hardware>
      <plugin>berrygripper_hw/GripperSystem</plugin>
      <param name="serial_port">/dev/ttyUSB1</param>
      <param name="baud">1000000</param>
      <param name="id">1</param>
      <param name="resolution_ticks">4096</param>
      <param name="gear_ratio">1.0</param>
      <param name="sign">1.0</param>
      <param name="offset_rad">0.0</param>
      <param name="max_torque">800</param>
    </hardware>

    <joint name="gripper_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>
</robot>
